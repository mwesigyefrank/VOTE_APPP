<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"

        android:layout_height="match_parent"
        tools:context=".LOGO">

        <EditText
            android:id="@+id/prog"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/std_id"
            android:textColor="@android:color/holo_green_dark"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="72dp"
            android:background="@android:color/white"
            android:ems="15"

            android:hint="Program"
            android:inputType="textPersonName"
            android:textAlignment="center"
           />

        <TextView
android:textColor="@android:color/holo_green_dark"            android:layout_alignParentTop="true"
            android:id="@+id/textView2"
            android:layout_width="311dp"
            android:ems="15"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Register with us "
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
             />

    <EditText
        android:ems="15"
        android:id="@+id/fname"
        android:textColor="@android:color/holo_green_dark"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@android:color/white"
        android:hint="fullName"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="87dp" />

        <EditText
            android:textColor="@android:color/holo_green_dark"
            android:id="@+id/std_id"
            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="56dp"
            android:ems="15"
            android:hint="University_ID"
            android:background="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/password"
            android:inputType="textPersonName"
            android:textAlignment="center"
          />

    <EditText
        android:textColor="@android:color/holo_green_dark"
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:ems="15"
        android:background="@android:color/white"
        android:hint="Mobile Phone"
        android:inputType="textPersonName"
        android:textAlignment="center"
      />

        <EditText
            android:textColor="@android:color/holo_green_dark"
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/phone"
            android:layout_marginStart="8dp"

            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:ems="15"
            android:hint="Password"
            android:background="@android:color/white"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            android:textAlignment="center"
           />

    <Button
        android:id="@+id/btnregister"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_below="@id/prog"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundedbutton"
        android:text="Sign up"
        android:textColor="@android:color/holo_green_dark"

        android:textSize="20dp"
   />

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
android:textColor="@android:color/holo_green_dark"
            android:ems="15"
            android:background="@android:color/white"
            android:hint="Email Adress"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fname"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
      />


    </RelativeLayout>


